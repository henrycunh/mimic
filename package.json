{
  "name": "mimic",
  "displayName": "mimic",
  "description": "Convert any pseudocode to real code",
  "version": "0.0.1",
  "publisher": "henrycunh",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrycunh/mimic.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mimic.convertPseudocodeToCode"
  ],
  "main": "./out/extension.js",
  "icon": "assets/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "mimic.convertPseudocodeToCode",
        "title": "Convert pseudocode to code",
        "icon": "src/loading.svg"
      }
    ],
    "keybindings": [
      {
        "command": "mimic.convertPseudocodeToCode",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "configuration": [
      {
        "title": "Mimic",
        "properties": {
          "mimic.apiKey": {
            "title": "OpenAI API Key",
            "type": "string",
            "default": "",
            "markdownDescription": "The API key for your OpenAI account. You can get one at your [OpenAI dashboard](https://beta.openai.com/account/api-keys).",
            "order": 1
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn compile && yarn lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.16.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "axios": "^1.2.2"
  }
}
